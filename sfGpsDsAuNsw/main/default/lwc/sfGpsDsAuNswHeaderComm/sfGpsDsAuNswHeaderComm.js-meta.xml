<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>NSW DS Header</masterLabel>
    <targets>
      <target>lightningCommunity__Page</target>
      <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
      <targetConfig targets="lightningCommunity__Default">
        <property
        name="srWaratahLabel"
        type="String"
        label="Screenreader Waratah Label"
        description="x"
        default="NSW Government"
      />
        <property
        name="logo"
        type="String"
        label="Logo"
        description="Logo URL for co-brand"
      />
        <property
        name="logoAlt"
        type="String"
        label="Alternative text to co-brand logo"
      />
        <property
        name="siteTitle"
        type="String"
        label="Site title"
        description="Provides user context of the product or service."
        default=""
      />
        <property
        name="siteDescriptor"
        type="String"
        label="Site descriptor"
        description="Provides user context of the cluster/department/agency if required."
        default=""
      />
        <property
        name="headerUrl"
        type="String"
        label="content"
        description="Href to content."
        default="/"
      />
        <property
        name="mobile"
        type="String"
        label="mobile"
        description="Show a responsive menu on mobile."
        default="true"
      />
        <property
        name="search"
        type="Boolean"
        label="Show search bar"
        description="Provides user with easy access to a targeted search."
        default="true"
      />
        <property
        name="menuLabel"
        type="String"
        label="Menu label"
        description="."
        default="menu"
      />
        <property
        name="searchLabel"
        type="String"
        label="Search label"
        description="."
        default="Search site for:"
      />
        <property
        name="className"
        type="String"
        label="Class name"
        description="Additional CSS class to be applied."
      />
      </targetConfig>
    </targetConfigs>
  </LightningComponentBundle>
